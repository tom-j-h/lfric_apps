{% do LOG.debug("Entered site/meto/groups/groups_ngarch.cylc") %}

{# Spice Groups #}
{% do site_groups.update({
    "ngarch_spice_developer": [
        "ngarch_default-C24_spice_intel_fast-debug-64bit",
        "ngarch_default-C24_spice_intel_full-debug-64bit",
        "ngarch_default-C24_spice_gnu_fast-debug-64bit",
        "ngarch_default-C24_spice_gnu_full-debug-64bit",
    ],
    "ngarch_spice": [
        "ngarch_spice_developer",
    ],
    "ngarch_spice_build": [
        "build_ngarch_spice_intel_fast-debug-64bit",
        "build_ngarch_spice_intel_full-debug-64bit",
        "build_ngarch_spice_gnu_fast-debug-64bit",
        "build_ngarch_spice_gnu_full-debug-64bit",
    ],
    })  %}

{# Azspice Groups #}
{% do site_groups.update({
    "ngarch_azspice_developer": [
        "ngarch_default-C24_azspice_gnu_fast-debug-64bit",
        "ngarch_default-C24_azspice_gnu_full-debug-64bit",
    ],
    "ngarch_azspice": [
        "ngarch_azspice_developer",
    ],
    "ngarch_azspice_build": [
        "build_ngarch_azspice_gnu_fast-debug-64bit",
        "build_ngarch_azspice_gnu_full-debug-64bit",
    ],
    })  %}

{# XC40 Groups #}
{% do site_groups.update({
    "ngarch_xc40_developer": [
        "ngarch_default-C24_xc40_intel_fast-debug-64bit",
        "ngarch_default-C24_xc40_intel_full-debug-64bit",
    ],
