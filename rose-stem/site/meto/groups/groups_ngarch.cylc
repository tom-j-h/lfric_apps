        "build_ngarch_ex1a_gnu_full-debug-64bit",
    ],
    })  %}

{# Platform Generic Groups #}
{% if site_vars.launch_platform == "spice" %}
    {% do site_groups.update({
        "ngarch_developer": [
            "scripts",
            "ngarch_spice_developer",
            "ngarch_xc40_developer",
        ],
        "ngarch": [
            "ngarch_developer",
            "ngarch_spice",
            "ngarch_xc40",
        ],
        "ngarch_build": [
            "ngarch_spice_build",
            "ngarch_xc40_build",
        ],
        }) %}
{% else %}
    {% do site_groups.update({
        "ngarch_developer": [
            "scripts",
            "ngarch_azspice_developer",
            "ngarch_ex1a_developer",
        ],
        "ngarch": [
            "ngarch_developer",
            "ngarch_azspice",
            "ngarch_ex1a",
        ],
        "ngarch_build": [
            "ngarch_azspice_build",
            "ngarch_ex1a_build",
        ],
        }) %}
{% endif %}

{# Platform Generic Extends #}
{% do site_groups.developer.extend(site_groups.ngarch_developer) %}
{% do site_groups.all.extend(site_groups.ngarch) %}
{% do site_groups.build.extend(site_groups.ngarch_build) %}

{# Spice Extends #}
{% do site_groups.spice_developer.extend(site_groups.ngarch_spice_developer) %}
{% do site_groups.spice.extend(site_groups.ngarch_spice) %}
{% do site_groups.spice_build.extend(site_groups.ngarch_spice_build) %}

{# Azspice Extends #}
{% do site_groups.azspice_developer.extend(site_groups.ngarch_azspice_developer) %}
{% do site_groups.azspice.extend(site_groups.ngarch_azspice) %}
{% do site_groups.azspice_build.extend(site_groups.ngarch_azspice_build) %}

{# XC40 Extends #}
{% do site_groups.xc40_developer.extend(site_groups.ngarch_xc40_developer) %}
{% do site_groups.xc40.extend(site_groups.ngarch_xc40) %}
{% do site_groups.xc40_build.extend(site_groups.ngarch_xc40_build) %}

{# EX1A Extends #}
{% do site_groups.ex1a_developer.extend(site_groups.ngarch_ex1a_developer) %}
{% do site_groups.ex1a.extend(site_groups.ngarch_ex1a) %}
{% do site_groups.ex1a_build.extend(site_groups.ngarch_ex1a_build) %}

