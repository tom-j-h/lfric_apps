{# EX1A Groups #}
{% do site_groups.update({
    "ngarch_ex1a_developer": [
        "ngarch_default-C24_ex1a_gnu_fast-debug-64bit",
        "ngarch_default-C24_ex1a_gnu_full-debug-64bit",
    ],
    "ngarch_ex1a": [
